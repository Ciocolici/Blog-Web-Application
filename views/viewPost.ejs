<%- include('partials/header.ejs') %>
<%- include('partials/sidebar.ejs') %>
<div class="container-fluid min-vh-100 d-flex flex-column">
  <div class="row flex-grow-1">
  <div class="col-12 d-flex flex-column">
    <form class="custom-forms bgcolor-light p-3 d-flex flex-column flex-grow-1">
      <div class="form-group custom-font-traditional mb-3">
        <input type="text" class="form-control bgcolor-light fs-4" id="title" value="<%= post.title %>" readonly disabled>
    </div>
    <div class="form-group custom-font-traditional mb-3 flex-grow-1">
      <textarea class="form-control custom-forms bgcolor-light fs-5 h-100" id="content" rows="5" readonly disabled><%= post.content %></textarea>
  </div>
</form>
</div>
</div>
<%- include('partials/footer.ejs') %>
      <button type="button">
        <a href="/editPost/<%= post.id %>" class="btn">Edit</a>
      </button>
