<%- include('partials/header.ejs') %>
    <%- include('partials/sidebar.ejs') %>
    <div class="container-fluid min-vh-100 d-flex flex-column">
      <div class="row flex-grow-1">
        <div class="col-12 d-flex flex-column">
          <form action="/editPost/<%= post.id %>?_method=PUT" method="POST" class="custom-forms bgcolor-light p-3 d-flex flex-column flex-grow-1">
            <div class="form-group custom-font-traditional mb-3">
              <input type="text" id="title" name="title" required class="form-control bgcolor-light fs-4" value="<%= post.title %>"
              required>
            </div>
            <div class="form-group custom-font-traditional mb-3 flex-grow-1">
              <textarea id="content" name="content" required class="form-control custom-forms bgcolor-light fs-5 h-100"><%= post.content %></textarea>
            </div>
            <div class="form-group text-end mt-auto">
              <button type="submit" class="btn fs-4 custom-button">Update Post</button>
            </div>
          </form>
        </div>
      </div>
        <%- include('partials/footer.ejs') %>
